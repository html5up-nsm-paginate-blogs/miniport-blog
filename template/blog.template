<html>
	<head>
		@input(template/head.content)
	</head>
	<body class="is-preload">
		@input(template/menu.content)

		<!-- Blog -->
			<article id="top" class="wrapper style3">
				<div class="container">
					<div align="center">
						<div class="blog" align="left" style="max-width:800px; padding-top:30px">
							@content
						</div>
					</div>
				</div>
			</article>

		@input(template/contact.content)

		<!-- Scripts -->
			<script src="@pathtofile($[output-dir]/assets/js/jquery.min.js)"></script>
			<script src="@pathtofile($[output-dir]/assets/js/jquery.scrolly.min.js)"></script>
			<script src="@pathtofile($[output-dir]/assets/js/browser.min.js)"></script>
			<script src="@pathtofile($[output-dir]/assets/js/breakpoints.min.js)"></script>
			<script src="@pathtofile($[output-dir]/assets/js/util.js)"></script>
			<script src="@pathtofile($[output-dir]/assets/js/main.js)"></script>
			<script src='@pathtofile($[output-dir]/assets/js/process_md_blocks.js)'></script>
			<script src="@pathtofile($[output-dir]/assets/js/showdown.min.js)"></script>
			<script>
				var converter = new showdown.Converter();
				converter.setOption('tables', 'on');
				converter.setOption('strikethrough', 'on');
				elements = document.getElementsByClassName('markdown');
				for(var i=0; i<elements.length; i++)
				{
					elements[i].innerHTML = converter.makeHtml(elements[i].innerHTML);
				}
			</script>
	</body>
</html>
